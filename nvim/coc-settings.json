// installed extensions are:
// coc-yank coc-snippets coc-prettier coc-eslint coc-emmet coc-yaml coc-tsserver
// coc-stylelint coc-phpls coc-markdownlint coc-json coc-html coc-css coc-calc coc-pairs
{
  "suggest.minTriggerInputLength": 3,
  "suggest.noselect": false,
  "suggest.enablePreselect": true,
  "suggest.maxCompleteItemCount": 20,
  "snippets.snipmate.enable": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascriptreact",
    "javascript",
    "scss",
    "css",
    "json",
    "yaml"
  ],
  "snippets.ultisnips.directories": ["~/.config/nvim/snippets"],
  "snippets.extends": {
    "php": ["html"],
    "scss": ["css"],
    "jsx": ["javascript"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  }
}
